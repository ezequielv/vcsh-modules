#!/bin/bash

if [ -e ".gitmodules" ]; then
    echo ".gitmodules exists"
    exit 2
else
    PATH="${GIT_ORIG_EXEC_PATH}:${PATH}"
    GIT_EXEC_PATH="${GIT_ORIG_EXEC_PATH}"
    mpath="${VCSH_MODULES_PATH}/${VCSH_REPO_NAME}"
    eval "$(sed "s/.gitmodules/\"${mpath}\"/g" "${GIT_ORIG_EXEC_PATH}/git-submodule")"
fi
